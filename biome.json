{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80,
    "attributePosition": "auto"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": { "useTemplate": "off", "noVar": "error" },
      "suspicious": { "noMisleadingCharacterClass": "off" }
    },
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "**/testing/**",
      "**/src/testing/**"
    ]
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "single",
      "trailingComma": "all",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "quoteStyle": "single",
      "attributePosition": "auto"
    }
  }
}
