{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingComma": "all"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useTemplate": "off"
      },
      "suspicious": {
        "noMisleadingCharacterClass": "off"
      }
    },
    "ignore": ["**/node_modules/**", "**/dist/**", "**/testing/**", "**/src/testing/**"]
  }
}
