{
  "root": true,
  "env": {
    "node": true,
    "browser": true
  },
  "extends": [
    "plugin:vue/vue3-essential",
    "eslint:recommended",
    "prettier",
    "plugin:prettier/recommended"
  ],
  "ignorePatterns": [
    "src/testing/**",
    "/.lintstagedrc.json"
  ],
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": false,
    "ecmaFeatures": {
      "globalReturn": false
    },
    "ecmaVersion": 2020,
    "parser": "@babel/eslint-parser",
    "babelOptions": {
      "parserOpts": {
        "plugins": [
          "jsx"
        ]
      }
    }
  },
  "rules": {
    "vue/no-unused-components": "warn",
    "no-unused-vars": [
      "error",
      {
        "args": "none"
      }
    ],
    "vue/no-multiple-template-root": "off",
    "vue/valid-v-slot": [
      "error",
      {
        "allowModifiers": true
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "singleQuote": true,
        "trailingComma": "all",
        "printWidth": 100,
        "tabWidth": 2,
        "bracketSpacing": true,
        "vueIndentScriptAndStyle": true,
        "endOfLine": "auto"
      }
    ],
    "consistent-return": [
      "error"
    ]
  }
}